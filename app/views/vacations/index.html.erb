
<h1>Vacations</h1>

<%= link_to "Start New Vacation", new_vacation_path, :class => "btn" %>

<% for vacation in @vacations %>
  <div class="vacation">
    <h2><%= vacation.title %></h2>
    <p><%= vacation.body %></p>
    <% for beat in vacation.beats %>
      <%= image_tag beat.picture(:medium) %></p>
    <% end %>
  </div>
<% end %>






